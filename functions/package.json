{
	"name": "functions",
	"type": "module",
	"scripts": {
		"lint": "eslint .",
		"build": "tsc",
		"build:watch": "tsc --watch",
		"test": "vitest --run",
		"test:unit": "vitest --run --exclude '**/*.integration.test.ts'",
		"test:integration": "vitest --run --testNamePattern 'integration|Integration' src/**/*.integration.test.ts",
		"test:watch": "vitest",
		"serve": "pnpm build && firebase emulators:start --only functions",
		"shell": "pnpm build && firebase functions:shell",
		"start": "pnpm shell",
		"deploy": "firebase deploy --only functions",
		"logs": "firebase functions:log"
	},
	"engines": {
		"node": "20"
	},
	"main": "lib/index.js",
	"dependencies": {
		"@google-cloud/functions-framework": "^4.0.1",
		"firebase-admin": "^13.6.0",
		"firebase-functions": "^7.0.0",
		"resend": "^6.5.2",
		"stripe": "^20.1.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.29.0",
		"eslint": "^9.29.0",
		"firebase-functions-test": "^3.4.1",
		"globals": "^16.2.0",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.34.0",
		"vitest": "^3.2.4"
	},
	"private": true
}
